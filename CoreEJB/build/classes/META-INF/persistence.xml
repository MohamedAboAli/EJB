	<persistence-unit name="ConfigurationDB" transaction-type="JTA">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<non-jta-data-source>JDBC/GATEWAY_CONFIGURATION</non-jta-data-source>
		<class>model.Book</class>
		<properties>
			<property name="hibernate.default_schema" value="EBPP_CONFIGURATION" />
			  <property name="hibernate.show_sql" value="false"/>
			<property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect"/>
			<property name="hibernate.transaction.manager_lookup_class" value="org.hibernate.transaction.WebSphereExtendedJTATransactionLookup"/>
			<property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
			<property name="hibernate.cache.use_second_level_cache" value="false"/>
			<property name="hibernate.cache.use_query_cache" value="false"/>
		</properties>
	</persistence-unit>
</persistence>  
